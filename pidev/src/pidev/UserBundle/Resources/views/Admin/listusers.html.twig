{% extends ':admin:baseAdmin.html.twig' %}
{% block content %}

    <div class="content container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="page-title">Utilisateurs</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="widget">
                    <div class="widget-header"> <i class="icon-table"></i>
                        <h3>Liste de tout les utilisateurs</h3>
                    </div>
                    <div class="widget-content">
                        <div class="body">
                            <table class="table table-striped table-images">
                                <thead>
                                <tr>
                                    <th>image</th>
                                    <th>ID</th>
                                    <th>nom d'utilisateur</th>
                                    <th>numéro téléphone</th>
                                    <th>Supprimer</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for user in users %}
                                    <tr>

                                        <td><img src="{{asset ('/pictures/' ~ user.image ~ '')}}"></td>
                                        <td> {{ user.id }} </td>
                                        <td> {{ user.username }} </td>
                                        <td> {{ user.numTel }} </td>
                                        <td class="hidden-xs"><button class="btn btn-sm btn-warning"><a href="{{ path('delete_user', { 'id': user.id }) }}">Supprimer</a> </button></td>

                                    </tr>
                                {% endfor %}
                                <div align="center" style="float: left;margin-left: 35%">
                                    <div class="row">
                                        <div class="pagination">
                                            <div class="col-xs-12">

                                                {{ knp_pagination_render(users) }}
                                            </div>

                                        </div>
                                    </div>

                                </div>


                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
