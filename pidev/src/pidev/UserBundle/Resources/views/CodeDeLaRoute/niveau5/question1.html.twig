        <div class="container">
            <div class="row">
                <div class="col-sm-8 car-detail-container">

                    <div class="slider-carousel flexslider">
                        <ul class="slides">
                            <li>
                                <img  src="{{asset ('/pictures/' ~ f.image ~ '')}}"  alt=""/>
                            </li>
                        </ul>
                    </div>

                    <div class="title">
                        <p>{{ f.question }}</p>
                    </div>

                    <p class="info-text">

                    <ul>
                        <li><input type="radio" value="1" name="deux">{{ f.choix1 }}</li>
                        <li><input type="radio" value="2" name="deux">{{ f.choix2 }}</li>
                        {% if f.choix3 is not null %}
                            <li><input type="radio" value="2" name="deux">{{ f.choix3 }}</li>
                        {% endif %}
                    </ul>
                    </p>
                </div>
            </div>
        </div>
    {% endfor %}
