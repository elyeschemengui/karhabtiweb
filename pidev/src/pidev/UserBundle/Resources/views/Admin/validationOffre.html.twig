{% extends ':admin:baseAdmin.html.twig' %}
{% block content %}

    <div class="content container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="page-title">Offres</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="widget">
                    <div class="widget-header"> <i class="icon-table"></i>
                        <h3>Liste des offres non valid√©s</h3>
                    </div>
                    <div class="widget-content">
                        <div class="body">
                            <table class="table table-striped table-images">
                                <thead>
                                <tr>
                                    <th>image</th>
                                    <th>ID</th>
                                    <th>Nom Offre</th>
                                    <th>Description</th>
                                    <th>Validation</th>
                                    <th>Refuser</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for offre in offres %}
                                    <tr>

                                        <td><img src="{{asset ('/pictures/' ~ offre.photo ~ '')}}"></td>
                                        <td> {{ offre.id }} </td>
                                        <td><a href="{{ path('offre_show',{'id': offre.id}) }}"> {{ offre.nomOffre }} </a> </td>
                                        <td> {{ offre.description }} </td>
                                        <td class="hidden-xs"><button class="btn btn-sm btn-success"><a href="{{ path('validationOffre', { 'id': offre.id }) }}">Valider</a> </button></td>
                                        <td class="hidden-xs"><button class="btn btn-sm btn-warning"><a href="{{ path('delete_offre', { 'id': offre.id }) }}">Refuser</a> </button></td>
                                    </tr>
                                {% endfor %}
                                <div align="center" style="float: left;margin-left: 35%">
                                    <div class="row">
                                        <div class="pagination">
                                            <div class="col-xs-12">

                                                {{ knp_pagination_render(offres) }}
                                            </div>

                                        </div>
                                    </div>

                                </div>
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
