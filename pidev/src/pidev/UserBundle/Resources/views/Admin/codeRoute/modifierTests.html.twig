{% extends ':admin:baseAdmin.html.twig' %}
{% block content %}
    <div class="content container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="page-title">Modifier les test <small>Admin</small></h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="widget">
                    <div class="widget-header"> <i class="icon-table"></i>
                        <h3></h3>
                    </div>
                    <div class="widget-content">
                        <div class="body">
                            <table class="table table-striped table-images">
                                <thead>
                                <tr>
                                    <th># Niveau</th>
                                    <th>Question</th>
                                    <th>Choix1</th>
                                    <th>Choix2</th>
                                    <th>Choix3</th>
                                    <th>Choix4</th>
                                    <th>Choix5</th>
                                    <th>Reponse</th>
                                    <th>Photo</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for test in listTests  %}
                                <tr>
                                    <td>{{ test.niveau }}</td>
                                    <td>{{ test.question }}</td>
                                    <td>{{ test.choix1 }}</td>
                                    <td>{{ test.choix2 }}</td>
                                    <td>{{ test.choix3 }}</td>
                                    <td>{{ test.choix4 }}</td>
                                    <td>{{ test.choix5 }}</td>
                                    <td>{{ test.reponse }}</td>
                                    <td><img  src="{{asset ('/pictures/' ~ test.image ~ '')}}"  class="img-cadre" width="100"></td>
                                    <td><a class="btn btn-sm btn-primary" href="{{ path('edit_test',{'id':test.id}) }}"> Edit </a></td>
                                </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}