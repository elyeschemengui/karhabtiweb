{% extends ':admin:baseAdmin.html.twig' %}
{% block content %}
    <div class="content container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="page-title">Listes des tests <small></small></h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="widget">
                    <div class="widget-header"> <i class="icon-hand-up"></i>
                        <h3></h3>
                    </div>
                    <div class="widget-content">
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th># Niveau</th>
                                <th>Question</th>
                                <th>Choix1</th>
                                <th>Choix2</th>
                                <th>Choix3</th>
                                <th>Choix4</th>
                                <th>Choix5</th>
                                <th>Reponse</th>
                                <th>Photo</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for test in listTests  %}
                                <tr>
                                    <td>{{ test.niveau }}</td>
                                    <td>{{ test.question }}</td>
                                    <td>{{ test.choix1 }}</td>
                                    <td>{{ test.choix2 }}</td>
                                    <td>{{ test.choix3 }}</td>
                                    <td>{{ test.choix4 }}</td>
                                    <td>{{ test.choix5 }}</td>
                                    <td>{{ test.reponse }}</td>
                                    <td><img  src="{{asset ('/pictures/' ~ test.image ~ '')}}"  class="img-cadre" width="100"></td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}